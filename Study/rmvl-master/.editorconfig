# https://editorconfig.org/

root = true

[*]
end_of_line = lf
indent_style = space
tab_width = 4
indent_size = 4
charset = utf-8
insert_final_newline = true
trim_trailing_whitespace = false

[{CMakeLists.*,*.cmake}]
indent_style = space
indent_size = 2

[*.{md,markdown}]
indent_style = space
indent_size = 2
insert_final_newline=false
